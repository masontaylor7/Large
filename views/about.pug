extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
    .nav-bar
        a(href='/' class='logo')
            .logo-container
                .medium-img
                    img(src='https://seeklogo.com/images/M/medium-logo-F0ACFCCD58-seeklogo.com.png' class='medium-img')
                .large-font
                    h1.large-font Large
        .button-container
            a(href='/about'): button(type='button' class='about-button') About Us
            if (isLoggedIn)
                form(action="/logout" method="post")
                    button(class='logout-button') Log-Out
                div
                    a(href=`/users/${user}`): img(src='https://www.freeiconspng.com/uploads/profile-icon-9.png' class='profile-img')
            else
                a(type='button' class='login-button' href='/login') Sign In
                a(href='/signup'): button(type='button' class='signup-button') Get Started

    .about-div
        .collaborator-div
            img(src='https://avatars.githubusercontent.com/u/89224301?v=4' class='collaborator-image')
            h2.collaborator-name Mason Taylor
            .icon-div
                a(href='https://github.com/masontaylor7' target='_blank')
                    i.fa-brands.fa-github.fa-2x
                a(href='https://www.linkedin.com/in/mason-taylor-5a2139211/' target='_blank')
                    i.fa-brands.fa-linkedin.fa-2x
        .collaborator-div
            img(src='https://avatars.githubusercontent.com/u/72574258?v=4' class='collaborator-image')
            a(href='https://ljmurill.github.io/' target='_blank' class='name-link')
                h2.collaborator-name Leonel Murillo
            .icon-div
                a(href='https://github.com/ljmurill' target='_blank')
                    i.fa-brands.fa-github.fa-2x
                a(href='https://www.linkedin.com/in/leonel-murillo/' target='_blank')
                    i.fa-brands.fa-linkedin.fa-2x
        .collaborator-div
            img(src='https://avatars.githubusercontent.com/u/88861592?v=4' class='collaborator-image')
            a(href='https://davidalliger.github.io' target='_blank' class='name-link')
                h2.collaborator-name David Alliger
            .icon-div
                a(href='https://github.com/davidalliger' target='_blank')
                    i.fa-brands.fa-github.fa-2x
                a(href='https://www.linkedin.com/in/david-alliger-a73351208/' target='_blank')
                    i.fa-brands.fa-linkedin.fa-2x
